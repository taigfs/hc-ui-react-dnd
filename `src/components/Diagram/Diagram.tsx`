import React from 'react';
import { StyledReactFlow, Background, Controls } from 'react-flow-renderer';
import { ConnectionMode, Node, Edge, OnNodesChange, OnEdgesChange, OnConnect } from 'react-flow-renderer';
import { NODE_TYPES, EDGE_TYPES } from './config';
import useStore, { RFState } from '../../state/diagram-store';

const Diagram: React.FC = () => {
  const {
    nodes,
    edges,
    onNodesChange,
    onEdgesChange,
    onConnect
  } = useStore<RFState>();

  return (
    <StyledReactFlow
      nodeTypes={NODE_TYPES}
      edgeTypes={EDGE_TYPES}
      nodes={nodes}
      edges={edges}
      onNodesChange={onNodesChange}
      onEdgesChange={onEdgesChange}
      onConnect={onConnect}
      connectionMode={ConnectionMode.Loose}
      defaultEdgeOptions={{
        type: 'default'
      }}
    >
      <Background 
        gap={12}
        size={2}
        color="#111"
      />
      <Controls />
    </StyledReactFlow>
  );
};

export default Diagram;
